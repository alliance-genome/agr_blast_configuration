        "DataProvider": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
		    "enum": [
			    "WB",
			    "SGD",
			    "XB",
			    "FB",
			    "ZFIN"
		    ]
                },
                "environments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "environments",
                "name"
            ],
            "title": "DataProvider"
        }
    }
